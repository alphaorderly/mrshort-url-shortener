<section class='flex justify-center items-center size-full'>
  <div class='w-96 h-48'>
    <form
      class='flex flex-col justify-center items-center h-full'
      action='/auth/login'
      method='POST'
    >
      <input
        class='w-80 h-10 mb-4 px-2 border border-gray-300'
        type='text'
        name='username'
        placeholder='아이디'
        required
      />
      <input
        class='w-80 h-10 mb-4 px-2 border border-gray-300'
        type='password'
        name='password'
        placeholder='비밀번호'
        required
      />
      <button
        class='w-80 h-10 bg-green-500 text-white'
        type='submit'
      >로그인</button>
    </form>
  </div>
</section>