
<section class="bg-gradient-to-r from-blue-500 to-purple-500 text-white min-h-screen flex justify-center items-center p-8">
    <div class="w-full max-w-md bg-white shadow-2xl rounded-xl p-8 text-gray-900">
        <h1 class="text-3xl font-extrabold text-center mb-8">회원가입</h1>
        <form class="space-y-6" onsubmit="validateForm(event)">
            <div>
                <label for="id" class="block font-medium text-gray-700 mx-4 my-2">아이디</label>
                <input type="id" id="id" name="id" class="w-full p-3 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" required>
            </div>
            <div>
                <label for="password" class="block font-medium text-gray-700 mx-4 my-2">비밀번호</label>
                <input type="password" id="password" name="password" class="w-full p-3 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" required>
            </div>
            <div>
                <label for="confirm_password" class="block font-medium text-gray-700 mx-4 my-2">비밀번호 확인</label>
                <input type="password" id="confirm_password" name="confirm_password" class="w-full p-3 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" required>
            </div>
            <button type="submit" class="w-full p-3 bg-blue-500 text-white rounded-full hover:bg-blue-700 transition duration-300 font-bold">회원가입</button>
        </form>
    </div>
</section>

<script>
    async function validateForm(event) {
        event.preventDefault();

        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirm_password').value;

        // Check basic password requirements
        if (password.length < 8) {
            alert('비밀번호는 8자 이상이어야 합니다.');
            return;
        }

        if (password !== confirmPassword) {
            alert('비밀번호가 일치하지 않습니다.');
            return;
        }

        const id = document.getElementById('id').value;

        const url = location.pathname.split('/').slice(-1)[0];

        const ans = await fetch('/register/signup', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    id,
                    password,
                    url
                }),
            })
        
        if (ans.status !== 201) {
            const message = await ans.json();
            alert(message.error)
        } else {
            alert('회원가입이 완료되었습니다.');
            window.location.href = '/';
        }
    }
</script>