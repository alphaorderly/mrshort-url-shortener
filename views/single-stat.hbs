<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<section class="bg-gradient-to-r from-blue-500 to-purple-500 text-white pt-12 h-full">
    <a href="/" class="flex items-center mx-8 p-4 bg-white shadow-md rounded-full hover:bg-gray-100 transition duration-300">
        <svg class="w-8 h-8 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
        </svg>
        <span class="text-blue-500 font-bold text-lg">홈으로 돌아가기</span>
    </a>

    <div class="container mx-auto px-8 py-6 space-y-10">
        <div class="bg-white shadow-2xl rounded-xl p-8 text-gray-900">
            <h2 class="text-2xl font-extrabold mb-4" id="original-url">Original URL</h2>
            <h2 class="text-2xl font-extrabold mb-4" id="shorten-url">Shortened URL</h2>
            <h2 class="text-2xl font-extrabold mb-4" id="all-clicks">Total Clicks</h2>
            <h2 class="text-2xl font-extrabold mb-4" id="expire">Expire</h2>
            <h2 class="text-2xl font-extrabold mb-4" id="is-expired">Expire</h2>
        </div>
        
        <div class="bg-white shadow-2xl rounded-xl p-8 text-gray-900">
            <h1 class="text-3xl font-extrabold mb-8 text-center">클릭 그래프</h1>
            <div class="bg-gray-200 shadow-inner rounded-lg p-8">
                <canvas id="clicksChart" class="w-full h-64"></canvas>
            </div>
        </div>
    </div>
</section>





<script>
    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('clicksChart').getContext('2d');

        // Data from Handlebars
        const click = {{{clicks}}};
        const short = {{{shorten}}};

        // Set the original URL
        document.getElementById('original-url').textContent = `원본 URL: ${short.originalURL}`;

        // Set the shortened URL
        document.getElementById('shorten-url').textContent = `단축 URL: ${short.shortenedURL}`;

        // Set the total clicks
        document.getElementById('all-clicks').textContent = `총 클릭 수: ${short.clickCount}`;

        // Set the expire status
        if(short.deleted === false) {
            document.getElementById('is-expired').textContent = `만료 여부: 아니요`;
        } else {
            document.getElementById('is-expired').textContent = `만료 여부: 예`;
        }

        // Set the expire date
        if(short.expiredAt === null) {
            document.getElementById('expire').textContent = `만료일: 없음`;
        } else {
            const expiredAt = new Date(short.expiredAt);
            const formatted = expiredAt.toISOString().split('T')[0] + ' ' + expiredAt.toTimeString().split(' ')[0];
            document.getElementById('expire').textContent = `만료일: ${formatted}`;
        }

        
        // Extract labels and data points
        const clicksPerDay = click.reduce((acc, click) => {
            const date = new Date(click.clickDate).toISOString().split('T')[0]; // Get the date part
            acc[date] = (acc[date] || 0) + 1; // Increment the count for that date
            return acc;
        }, {});

        // Prepare the data for the chart
        const labels = Object.keys(clicksPerDay); // Dates
        const dataPoints = Object.values(clicksPerDay); // Click counts

        // Create the chart
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: '일간 클릭 수',
                    data: dataPoints,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1,
                }]
            },
            options: {
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Date'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Click Count'
                        },
                        beginAtZero: true
                    }
                },
                maintainAspectRatio: false,
                responsive: true,
                interaction: {
                    mode: 'index', // Show tooltip for all datasets at the same x-index
                    intersect: false,
                },
                plugins: {
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    }
                }
            }
        });
    });
</script>